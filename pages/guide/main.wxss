/* pages/guide/main.wxss */
.container{
  padding: 0 0 25rpx 0;
  width: 100%;
  height: 100%;
}

.body{
  position: absolute;
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.content{
  display: flex;
  flex-direction: row;
  margin: 10% 0 0 5%;
}

.content2{
  display: flex;
  flex-direction: row;
  margin: 10% 0 5% 5%;
}

.content-text{
  padding: 10rpx 10rpx 10rpx 18rpx;
  width: 50%;
  display: flex;
  flex-direction: column;
  margin-left: 8%;
  font-size: 32rpx;
  background-color: rgba(200, 200, 200, 0.5);
  border-radius: 10rpx;
}

.content-text2{
  width: 50%;
  display: flex;
  margin-right: 8%;
  flex-direction: column;
  padding: 10rpx 10rpx 10rpx 18rpx;
  background-color: rgba(200, 200, 200, 0.5);
  border-radius: 10rpx;
  font-size: 32rpx;
}

.content-text text{
  padding: 5rpx 0 5rpx 0;
}

.content-text2 text{
  padding: 5rpx 0 5rpx 0;
}

.content image{
  width: 35%;
  height: 250rpx;
  border-radius: 15rpx;
  transform: rotate(-10deg);
}

.content2 image{
  width: 35%;
  height: 250rpx;
  border-radius: 15rpx;
  transform: rotate(5deg);
}