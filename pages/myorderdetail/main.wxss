/* pages/myorderdetail/main.wxss */
.container{
  padding: 0 0 25rpx 0;
}

.body{
  position: absolute;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
}

.upper{
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  background-color: white;
  padding: 20rpx 0 20rpx 0;
}

.form{
  width: 100%;
  /*background-color: rgb(240, 240, 240);*/
  font-size: 35rpx;
  font-family: Arial, "宋体";
  margin-top: 15rpx;
}

.view-item{
  display: flex;
  flex-direction:row;
  width:98%;
  padding-left: 1%;
  padding-right: 1%;
  padding-top: 15rpx;
  padding-bottom:15rpx;
  border-bottom: 1rpx solid rgb(180, 180, 180);
}
.view-text{
  font-size: 32rpx;
  padding-top: 15rpx;
  text-align: left;
  padding-left: 15rpx;
  padding-bottom: 15rpx;
  font-weight: 500;
  width: 25%;
  color: grey;
}
.view-input{
  padding-top: 15rpx;
  padding-right: 15rpx;
  width: 75%;
  text-align: right;
}

.view-input2{
  padding-top: 15rpx;
  padding-left: 10rpx;
  padding-bottom: 15rpx;
  font-size: 35rpx;
  width: 75%;
  text-align: left;
}

.lower{
  margin-top: 60rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: white;
  align-items: center;
  padding: 40rpx 0 20rpx 0;
}

.notfound{
  height: 50%;
  background-color: white;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: absolute;
  /*background-color: rgb(240, 240, 240);*/
}